{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile current file",
            "command": "ssh -t DKSRV133 'cd /prj/noxdbutf8/;echo ${relativeFile} ; gmake current MOD=${fileBasenameNoExtension} SRC=${relativeFile}'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "c",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    //"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    // src/ileastic.c, 241.2: CZM0045(30) Undeclared identifier a.
                    
                    "regexp": "^(.*), (\\d+)\\.(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    // "severity": 4,
                    "message": 4
                }
            }
        },
        {
            "label": "Compile Service program noxdbutf8",
            "command": "ssh DKSRV133 'cd /prj/noxdbutf8/;gmake all'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Compile Test modules for noxdbutf8",
            "command": "ssh DKSRV133 'cd /prj/noxdbutf8/test/;gmake'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Compile current example file",
            "command": "ssh -t DKSRV133 'cd /prj/noxdbutf8;echo ${relativeFile} ; gmake -f examples/makefile MOD=${fileBasenameNoExtension} SRC=${relativeFile}' ",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "c",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    //"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    // src/ileastic.c, 241.2: CZM0045(30) Undeclared identifier a.
                    
                    "regexp": "^(.*), (\\d+)\\.(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    // "severity": 4,
                    "message": 4
                }
            }
        },
        {
            "label": "Build deploy (zip-file in bin)",
            "command": "ssh DKSRV133 'cd /prj/noxdbutf8/;gmake deploy'",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}